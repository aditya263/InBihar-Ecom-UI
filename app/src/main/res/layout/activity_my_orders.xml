<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.MyOrdersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/purple_500"
        android:padding="@dimen/_10sdp">

        <EditText
            android:windowSoftInputMode="adjustPan"
            android:id="@+id/searchField"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_30sdp"
            android:hint="Search Product"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:drawablePadding="@dimen/_8sdp"
            android:padding="@dimen/_3sdp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layoutItem"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgPen"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:src="@drawable/pen_demo"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/txtDeliver"
                android:layout_toEndOf="@+id/imgPen"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:text="Delivered on Oct 12"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:textColor="@color/dark_grey"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"/>


            <TextView
                android:layout_toEndOf="@+id/imgPen"
                android:layout_below="@+id/txtDeliver"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:text="Correction Pen Metal Tip"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/purple_500"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>