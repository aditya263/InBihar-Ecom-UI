<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/purple_500">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_male_user"
                    android:layout_marginTop="@dimen/_15sdp"/>

                <TextView
                    android:id="@+id/txtName"
                    android:layout_below="@+id/img_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Aditya"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtPhone"
                    android:layout_below="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="+919876543210"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtEmailAddress"
                    android:layout_below="@+id/txtPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="ranjanaditya263@gmail.com"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_below="@+id/txtPhone"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:src="@drawable/ic_edit"/>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardUseCompatPadding="true"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtMyOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Orders"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@color/black"/>

                    <View
                        android:id="@+id/viewHr"
                        android:layout_below="@+id/txtMyOrder"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/lightGrey"
                        android:layout_marginTop="@dimen/_8sdp"/>

                    <TextView
                        android:id="@+id/txtViewOrders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View all Orders"
                        android:textAllCaps="true"
                        android:layout_below="@+id/viewHr"
                        android:textColor="@color/purple_500"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardUseCompatPadding="true"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtMyAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Addresses"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_below="@+id/txtMyAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Punaichak,Boring Road Chauraha,Patna,800001"
                        android:textSize="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/dark_grey"/>

                    <View
                        android:id="@+id/viewHr1"
                        android:layout_below="@+id/txtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/lightGrey"
                        android:layout_marginTop="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View 1 More"
                        android:textAllCaps="true"
                        android:layout_below="@+id/viewHr1"
                        android:textColor="@color/purple_500"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>